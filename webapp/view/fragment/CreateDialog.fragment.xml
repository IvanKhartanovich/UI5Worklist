<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Dialog
        class='sapUiContentPadding'
        beforeOpen="onDialogBeforeOpen"
        title='{i18n>createDialogTitle}'
    >
        <content>
            <VBox>
                <VBox>
                    <Label
                        text='HeaderID'
                        labelFor="idHeaderID"
                    />
                    <Input
                        id='idHeaderID'
                        value="{HeaderID}"
                    />
                </VBox>
                <VBox>
                    <Label
                        text='DocumentNumber'
                        labelFor="idDocumentNumber"
                    />
                    <Input
                        id='idDocumentNumber'
                        value="{DocumentNumber}"
                    />
                </VBox>
                <VBox>
                    <Label
                        text='PlantText'
                        labelFor="idPlantText"
                    />
                    <Input
                        id='idPlantText'
                        value="{PlantText}"
                    />
                </VBox>
                <VBox>
                    <Label
                        text='RegionText'
                        labelFor="idRegionText"
                    />
                    <Input
                        id='idRegionText'
                        value="{RegionText}"
                    />
                </VBox>
                <VBox>
                    <Label
                        text='Description'
                        labelFor="idDescription"
                    />
                    <TextArea
                        width="100%"
                        rows="3"
                        maxLength="256"
                        id='idDescription'
                        value="{Description}"
                    />
                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button
                ariaHasPopup="Dialog"
                width="30%"
                type="Emphasized"
                text="{i18n>save}"
                press="onSaveButtonPress"
            />
        </beginButton>
        <endButton>
            <Button
                ariaHasPopup="Dialog"
                width="30%"
                type="Transparent"
                text="{i18n>cancel}"
                press="onCancelButtonPress"
            />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
