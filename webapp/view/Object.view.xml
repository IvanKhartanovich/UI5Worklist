<mvc:View
    controllerName="zjblessons.Worklist.controller.Object"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button
                        type="Transparent"
                        icon="{i18n>backIcon}"
                        press="onNavBack"
                    />
                    <Title
                        text="{= ${objectView>/bEditMode}? ${i18n>objectEditMode} : ${DocumentNumber}}"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        icon="{i18n>editIcon}"
                        text="{i18n>objectEdit}"
                        visible="{= !${objectView>/bEditMode}}"
                        press="onEditButtonPress"
                    />
                    <Button
                        type="Emphasized"
                        text="{i18n>save}"
                        visible="{= ${objectView>/bEditMode}}"
                        press="onSaveButtonPress"
                    />
                    <Button
                        text="{i18n>cancel}"
                        visible="{= ${objectView>/bEditMode}}"
                        press="onCancelButtonPress"
                    />
                    <Button
                        text="{i18n>objectDelete}"
                        icon="{i18n>deleteIcon}"
                        visible="{= !${objectView>/bEditMode}}"
                        press="onDeleteButtonPress"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <IconTabBar
                backgroundDesign="Transparent"
                headerMode="Inline"
                class="sapUiContentPadding"
                select="onIconTabBarSelect"
                selectedKey="{= ${objectView>/sSelectedTab}}"
                expandable="false"
            >
                <content />
                <items>
                    <IconTabFilter
                        icon="{i18n>listIcon}"
                        text="{i18n>objectList}"
                        key="List"
                    >
                        <VBox>
                            <List>
                                <items>
                                    <CustomListItem>
                                        <content>
                                            <Label
                                                labelFor="idDocumentNumberInput"
                                                text="{i18n>tableDocumentNumberTitle}"
                                            />
                                            <Input
                                                id="idDocumentNumberInput"
                                                value="{DocumentNumber}"
                                                editable="{= ${objectView>/bEditMode}}"
                                            />
                                        </content>
                                    </CustomListItem>
                                    <CustomListItem>
                                        <content>
                                            <VBox>
                                                <Label
                                                    labelFor="idRegionTextSelect"
                                                    text="{i18n>tableRegionTextTitle}"
                                                />
                                                <Select
                                                    items="{path: '/zjblessons_base_Regions'}"
                                                    id="idRegionTextSelect"
                                                    editable="{= ${objectView>/bEditMode}}"
                                                >
                                                    <items>
                                                        <core:Item
                                                            key='{RegionID}'
                                                            text='{RegionText}'
                                                        />
                                                    </items>
                                                </Select>
                                            </VBox>
                                        </content>
                                    </CustomListItem>

                                    <CustomListItem>
                                        <content>
                                            <Label
                                                labelFor="idDescriptionInput"
                                                text="{i18n>tableDescriptionTitle}"
                                            />
                                            <Input
                                                id="idDescriptionInput"
                                                value="{Description}"
                                                editable="{= ${objectView>/bEditMode}}"
                                            />
                                        </content>
                                    </CustomListItem>
                                </items>
                            </List>
                        </VBox>
                    </IconTabFilter>
                    <IconTabFilter
                        icon="{i18n>allIcon}"
                        text="{i18n>objectForm}"
                        key="Form"
                    />
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
