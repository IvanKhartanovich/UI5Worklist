<mvc:View
    controllerName="zjblessons.Worklist.controller.Object"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <Page
        id="page"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button
                        type="Transparent"
                        icon="{i18n>backIcon}"
                        press="onNavBack"
                    />
                    <Title
                        text="{= ${objectView>/bEditMode}? ${i18n>objectEditMode} : ${DocumentNumber}}"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        icon="{i18n>editIcon}"
                        text="{i18n>objectEdit}"
                        visible="{= !${objectView>/bEditMode}}"
                        press="onEditButtonPress"
                    />
                    <Button
                        type="Emphasized"
                        text="{i18n>save}"
                        visible="{= ${objectView>/bEditMode}}"
                        press="onSaveButtonPress"
                    />
                    <Button
                        text="{i18n>cancel}"
                        visible="{= ${objectView>/bEditMode}}"
                        press="onCancelButtonPress"
                    />
                    <Button
                        text="{i18n>objectDelete}"
                        icon="{i18n>deleteIcon}"
                        visible="{= !${objectView>/bEditMode}}"
                        press="onDeleteButtonPress"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <IconTabBar
                backgroundDesign="Transparent"
                headerMode="Inline"
                class="sapUiContentPadding"
                select="onIconTabBarSelect"
                selectedKey="{= ${objectView>/sSelectedTab}}"
                expandable="false"
            >
                <content />
                <items>
                    <IconTabFilter
                        icon="{i18n>listIcon}"
                        text="{i18n>objectList}"
                        key="List"
                    >
                        <VBox>
                            <List>
                                <items>
                                    <CustomListItem>
                                        <content>
                                            <Label
                                                labelFor="idDocumentNumberInput"
                                                text="{i18n>tableDocumentNumberTitle}"
                                            />
                                            <Input
                                                id="idDocumentNumberInput"
                                                value="{DocumentNumber}"
                                                editable="{= ${objectView>/bEditMode}}"
                                            />
                                        </content>
                                    </CustomListItem>
                                    <CustomListItem>
                                        <content>
                                            <VBox>
                                                <Label
                                                    labelFor="idRegionTextSelect"
                                                    text="{i18n>tableRegionTextTitle}"
                                                />
                                                <Select
                                                    items="{path: '/zjblessons_base_Regions'}"
                                                    id="idRegionTextSelect"
                                                    editable="{= ${objectView>/bEditMode}}"
                                                >
                                                    <items>
                                                        <core:Item
                                                            key='{RegionID}'
                                                            text='{RegionText}'
                                                        />
                                                    </items>
                                                </Select>
                                            </VBox>
                                        </content>
                                    </CustomListItem>
                                    <CustomListItem>
                                        <content>
                                            <Label
                                                labelFor="idDescriptionInput"
                                                text="{i18n>tableDescriptionTitle}"
                                            />
                                            <Input
                                                id="idDescriptionInput"
                                                value="{Description}"
                                                editable="{= ${objectView>/bEditMode}}"
                                            />
                                        </content>
                                    </CustomListItem>
                                </items>
                            </List>
                        </VBox>
                    </IconTabFilter>
                    <IconTabFilter
                        icon="{i18n>allIcon}"
                        text="{i18n>objectForm}"
                        key="Form"
                    >
                        <VBox class="sapUiSmallMargin">
                            <form:Form>
                                <form:title>
                                    <core:Title text="{DocumentNumber}" />
                                </form:title>
                                <form:layout>
                                    <form:ResponsiveGridLayout
                                        labelSpanXL="4"
                                        labelSpanL="3"
                                        labelSpanM="4"
                                        labelSpanS="12"
                                        adjustLabelSpan="false"
                                        emptySpanXL="0"
                                        emptySpanL="4"
                                        emptySpanM="0"
                                        emptySpanS="0"
                                        columnsXL="2"
                                        columnsL="1"
                                        columnsM="1"
                                        singleContainerFullSize="false"
                                    />
                                </form:layout>
                                <form:formContainers>
                                    <form:FormContainer title="Main">
                                        <form:formElements>
                                            <form:FormElement
                                                label="{i18n>formHeaderID}"
                                            >
                                                <Text text="{HeaderID}" />
                                            </form:FormElement>
                                            <form:FormElement
                                                label="{i18n>formVersion}"
                                            >
                                                <Text text="{Version}" />
                                            </form:FormElement>
                                            <form:FormElement
                                                label="{i18n>tableDocumentDateTitle}"
                                            >
                                                <Text text="{DocumentDate}" />
                                            </form:FormElement>
                                            <form:FormElement
                                                label="{i18n>tablePlantTextTitle}"
                                            >
                                                <Text text="{PlantText}" />
                                            </form:FormElement>
                                            <form:FormElement
                                                label="{i18n>tableRegionTextTitle}"
                                            >
                                                <Text text="{RegionText}" />
                                            </form:FormElement>
                                            <form:FormElement
                                                label="{i18n>tableDescriptionTitle}"
                                            >
                                                <Text text="{Description}" />
                                            </form:FormElement>
                                        </form:formElements>
                                    </form:FormContainer>
                                    <form:FormContainer title="Details">
                                        <form:formElements>
                                            <form:FormElement
                                                label="{i18n>tableCreatedTitle}"
                                            >
                                                <Text text="{Created}" />
                                            </form:FormElement>
                                            <form:FormElement
                                                label="{i18n>formCreatedByFullNameTitle}"
                                            >
                                                <Text
                                                    text="{CreatedByFullName}"
                                                />
                                            </form:FormElement>
                                            <form:FormElement
                                                label="{i18n>formModifiedTitle}"
                                            >
                                                <Text text="{Modified}" />
                                            </form:FormElement>
                                            <form:FormElement
                                                label="{i18n>formModifiedByFullNameTitle}"
                                            >
                                                <Text
                                                    text="{ModifiedByFullName}"
                                                />
                                            </form:FormElement>
                                        </form:formElements>
                                    </form:FormContainer>
                                </form:formContainers>
                            </form:Form>
                        </VBox>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
