<mvc:View
    controllerName="zjblessons.Worklist.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        id="page"
        showHeader="false"
    >
        <content>
            <Table
                id="table"
                width="auto"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingThreshold="15"
                growingScrollToLoad="true"
                updateFinished="onUpdateFinished"
            >
                <headerToolbar>
                    <Toolbar height='auto'>
                        <Title
                            id="tableHeader"
                            text="{i18n>worklistTableTitle} ({= ${worklistView>/sCount}})"
                        />
                        <ToolbarSpacer />
                        <VBox>
                            <SearchField
                                id="DNumberSField"
                                showSearchButton="false"
                                tooltip="{i18n>worklistSearchTooltipDNumber}"
                                liveChange="onLiveChangeDNumberSField"
                                width="auto"
                            />
                            <SearchField
                                id="PTextSField"
                                tooltip="{i18n>worklistSearchTooltipPText}"
                                search="searchPTextSField"
                                width="auto"
                            />
                        </VBox>
                        <Button
                            icon="{i18n>refreshIcon}"
                            type="Transparent"
                            press="onPressRefresh"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column id="documentNumber">
                        <Text text="{i18n>tableDocumentNumberTitle}" />
                    </Column>
                    <Column id="documentDate">
                        <Text text="{i18n>tableDocumentDateTitle}" />
                    </Column>
                    <Column id="plantText">
                        <Text text="{i18n>tablePlantTextTitle}" />
                    </Column>
                    <Column id="description">
                        <Text text="{i18n>tableDescriptionTitle}" />
                    </Column>
                    <Column id="created">
                        <Text text="{i18n>tableCreatedTitle}" />
                    </Column>
                    <Column width="2%">
                        <Text text="" />
                    </Column>
                </columns>
            </Table>
        </content>
    </Page>
</mvc:View>
