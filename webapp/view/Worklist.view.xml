<mvc:View
    controllerName="zjblessons.Worklist.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        id="page"
        title="{i18n>worklistTitle}"
    >
        <content>
            <Table
                id="table"
                width="auto"
                items="{
					path: '/zjblessons_base_Headers',
					sorter: {
						path: 'DocumentDate',
						descending: true
					}
				}"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingThreshold="15"
                growingScrollToLoad="true"
                updateFinished="onUpdateFinished"
            >
                <headerToolbar>
                    <Toolbar height='auto'>
                        <Title
                            id="tableHeader"
                            text="{i18n>worklistTableTitle}"
                        />
                        <ToolbarSpacer />
                        <VBox>
                            <SearchField
                                id="DNumberSField"
                                showSearchButton="false"
                                tooltip="{i18n>worklistSearchTooltipDNumber}"
                                liveChange="onLiveChangeDNumberSField"
                                width="auto"
                            />
                            <SearchField
                                id="PTextSField"
                                tooltip="{i18n>worklistSearchTooltipPText}"
                                search="searchPTextSField"
                                width="auto"
                            />
                        </VBox>
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column id="documentNumber">
                        <Text text="{i18n>tableDocumentNumberTitle}" />
                    </Column>
                    <Column id="documentDate">
                        <Text text="{i18n>tableDocumentDateTitle}" />
                    </Column>
                    <Column id="plantText">
                        <Text text="{i18n>tablePlantTextTitle}" />
                    </Column>
                    <Column id="description">
                        <Text text="{i18n>tableDescriptionTitle}" />
                    </Column>
                    <Column id="created">
                        <Text text="{i18n>tableCreatedTitle}" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <ObjectIdentifier title="{DocumentNumber}" />
                            <ObjectIdentifier
                                title="{
									path: 'DocumentDate',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										style: 'short'
									}}"
                            />
                            <ObjectIdentifier title="{PlantText}" />
                            <ObjectIdentifier title="{Description}" />
                            <ObjectIdentifier
                                title="{
									path: 'Created',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										pattern: 'HH:mm dd/MM/yyyy'
									}
								}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
